<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_node_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btDisplayFromNodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display Paths" />

    <Button
        android:id="@+id/btDiscoverFromNodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discover Paths" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.kelvin.campuspathways.NodeSelectionActivity" />

</LinearLayout>